@using MealWheel
@model MealWheel.Models.MyProfile
@{
    ViewData["Title"] = "Delete";
}
<div class="row">
    <h2 style="color:mediumpurple">
        Delete A Profile
    </h2>
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
             <div class="form-group row">
            <div class="col-6">
                <label asp-for="Firstname"></label>
            </div>
            <div class="col-6">
                <input asp-for="Firstname" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="Firstname" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="Address"></label>
            </div>
            <input asp-for = "profileurl" readonly="readonly" type="hidden"/>
            <div class="col-6">
                <input asp-for="Address" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="Lastname"></label>
            </div>
            <div class="col-6">
               <input asp-for="Lastname" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="Lastname" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="profileImage"> </label>
            </div>
            <div class="col-6">
                <input asp-for="profileImage" disabled readonly="readonly" class="form-control" type="file">
            </div>
            <span asp-validation-for="profileImage" class="text-danger"></span>
            <br />
            </div>
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="MobileNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="MobileNumber" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
            <br />
            </div>
           
        <div class="form-group">
            <input class="btn btn-danger" value="Delete" type="submit"/>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
        </div>
         <div class="col-1">

        </div>
         <div class="col-3">
             <img src="~/@Model.profileurl" width="100%"/>
        </div>

       
    </div>
</form>
</div>