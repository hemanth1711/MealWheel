@using MealWheel
@model MealWheel.Models.MyProfile
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <h2 style="color:mediumpurple">
        Edit A Profile
    </h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
            <div class="col-2">
                <label asp-for="Firstname"></label>
            </div>
            <div class="col-5">
                <input asp-for="Firstname" class="form-control" id="validationCustom05" required/>
            </div>
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
               

             <div class="form-group row">
            <div class="col-2">
                <label asp-for="Lastname"></label>
            </div>
            <div class="col-5">
                <input asp-for="Lastname" class="form-control" id="validationCustom05" required/>
            </div>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>

             <div class="form-group row">
            <div class="col-2">
                <label asp-for="MobileNumber"></label>
            </div>
            <div class="col-5">
                <input asp-for="MobileNumber" class="form-control" id="validationCustom05" required/>
            </div>
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="form-group row">
             <div class="col-2">
                <label asp-for="Address"></label>
            </div>
          
            <div class="col-5">
                <input asp-for="Address" class="form-control" id="validationCustom05" required/>
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
            <input type="hidden" asp-for="profileurl" hidden/>

            </div>

             


            <div class="form-group row">
            <div class="col-2">
                <label asp-for="profileImage"> </label>
            </div>
            <div class="col-5">
                <input asp-for="profileImage" class="form-control" type="file">
            </div>
            <span asp-validation-for="profileImage" class="text-danger"></span>
            </div>

      
        

        <div class="form-group">
            <input class="btn btn-primary" value="Update" type="submit"/>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
        </div>
         <div class="col-1">

        </div>
         <div class="col-3">
             <img src="~/@Model.profileurl" width="100%"/>
        </div>
       @* <input asp-for="cid" type="hidden" hidden/>
*@
       
    </div>
</form>
</div>
