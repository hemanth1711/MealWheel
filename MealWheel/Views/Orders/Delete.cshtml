@using MealWheel
@model MealWheel.Models.MyOrder
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <h2 style="color:mediumpurple">
        Delete Order
    </h2>
    <form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
             <div class="form-group row">
            <div class="col-6">
                <label asp-for="bid"></label>
            </div>
            <div class="col-6">
                <input asp-for="bid" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="bid" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="uname"></label>
            </div>
            
            <div class="col-6">
                <input asp-for="uname" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="uname" class="text-danger"></span>
            <br />
            </div>  
            <div class="form-group row">
            <div class="col-6">
                <label asp-for="bill.product"></label>
            </div>
             <input asp-for = "bill.product.Id" readonly="readonly" type="hidden"/>
            <div class="col-6">
                <input asp-for="bill.product.Name" readonly="readonly" class="form-control" id="validationCustom05" required/>
            </div>
            </div>
            <div class="form-group row">
            <span asp-validation-for="bill.product.Name" class="text-danger"></span>
            <br />
             <div class="col-6">
                <label asp-for="bill.dateOrdered"></label>
            </div>
            
            <div class="col-6">
                <input asp-for="bill.dateOrdered" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="bill.dateOrdered" class="text-danger"></span>
            <br />
            </div>  
            <div class="col-6">
                <label asp-for="bill.quantity"></label>
            </div>
            
            <div class="col-6">
                <input asp-for="bill.quantity" readonly="readonly" class="form-control"  id="validationCustom05" required/>
            </div>
            <span asp-validation-for="bill.quantity" class="text-danger"></span>
            <br />
            </div>  

            <div class="col-6">
                <label asp-for="bill.Orderplaced"></label>
            </div>
            
            <div class="col-6">
                <input asp-for="bill.Orderplaced"disabled readonly="readonly" type="checkbox"/>
            </div>
            <span asp-validation-for="bill.Orderplaced" class="text-danger"></span>
            <br />
            </div>  
       
        <div class="form-group">
            <input class="btn btn-danger" value="Delete" type="submit"/>
            <a asp-action="Index" class="btn btn-success"> Back to List</a>
        </div>
        
         <div class="col-1">
            

       </div>
        
    
</form>
</div>
