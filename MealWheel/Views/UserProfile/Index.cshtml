@using MealWheel
@model MealWheel.Models.MyProfile
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./css/Style2.css">
    <title>Document</title>
</head>
<body>
<form method="post" asp-action="Index" enctype="multipart/form-data">
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <input hidden type="hidden" asp-for="@Model.id" />
                <input hidden type="hidden" asp-for="@Model.profileurl"/>
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="~/@Model.profileurl"><span class="font-weight-bold">@Model.Firstname</span><span class="text-black-50">@Model.email</span><span> </span></div>
                <input type="file" asp-for="@Model.profileImage" class="form-control" />
                <br />
                <input type="submit" class="btn btn-success form-control" value="Update Profile" />
                <br />
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">First Name</label><input type="text" asp-for="@Model.Firstname" class="form-control" placeholder="first name"></div>
                        <div class="col-md-6"><label class="labels">Last Name</label><input type="text" asp-for="Lastname" class="form-control" placeholder="surname"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" asp-for="MobileNumber" class="form-control" placeholder="enter phone number"></div>
                        
                        <div class="col-md-12"><label class="labels">Email ID</label><input type="text" asp-for="email" readonly class="form-control" placeholder="enter email id"></div>
                        <div class="col-md-12"><label class="labels">Address</label><input type="text" asp-for="Address" class="form-control" placeholder="enter email id"></div>

                    </div>
            </div>
        </div>
    </div>
    </div>
</form>
</body>
</html>

