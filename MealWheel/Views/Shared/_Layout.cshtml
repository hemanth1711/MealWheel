<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style1.css">
</head>
<body>
    <partial name="_LoginPartial.cshtml" />
    <header>
        <div class="row">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 hel">
            <div class="container-fluid">
                <div class="col-sm-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.jpeg" width="70px" height="70px"/></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MealWheel</a>
                </div>
                <div class="col-sm-7">
            @using(Html.BeginForm("Index", "Home", FormMethod.Get)) {
                <div id="search" class="search">
                    @Html.TextBox("search",null,new {@placeholder = "Search"})
                    <button type="button" class="button-search">
                        <span>
                            <i class="fa fa-magnifying-glass"></i>
                        </span>
                    </button>
                </div>
            }
            </div>
            <div class="col-sm-2">
                <div class="d-flex justify-content-end">
                    <div class="nav2">
                        <a href="" id="wishlist-total">
                            <i class="fa fa-cart-plus"></i>
                            cart Itms (@ViewData["hello"])
                        </a>
                    </div>
                </div>
            </div>
            </div>
        </nav>
        </div>
        <br>
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="linkk" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
              </li>
              <li class="nav-item">
                <a class="linkk" asp-area="" asp-controller="Home" asp-action="Fav">My Wishlist</a>
              </li>
              <li class="nav-item">
                <a class="linkk" asp-area="" asp-controller="Home" asp-action="cart">My cart</a>
              </li>
              <li class="nav-item">
                <a class="linkk" asp-area="" asp-controller="Home" asp-action="Orders">My orders</a>
              </li>
              <li class="nav-item">
                <a class="linkk"  asp-controller="Admin" asp-action="Index">Admin</a>
              </li>
              <li class="nav-item">
                <a class="linkk" asp-area="" asp-controller="UserProfile" asp-action="UserDiscount">Discount</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MealWheel - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
