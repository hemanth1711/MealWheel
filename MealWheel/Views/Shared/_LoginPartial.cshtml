@using Microsoft.AspNetCore.Identity
@using MealWheel.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style1.css">
</head>

@if (SignInManager.IsSignedIn(User))
{
     <div class="d-flex justify-content-end">
        <div class="row">
            <div class="col-sm-12">
                <div class="nav1 breadcrumb">
                        <a asp-controller="UserProfile" asp-action="Index"><i class="fl-bigmug-line-download146"></i>Hello @UserManager.GetUserName(User)!</a>
                        &nbsp/&nbsp
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                         </form>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                          </button>
                </div>
            </div>
        </div> 
    </div>
}
else
{
    <div class="d-flex justify-content-end">
        <div class="row">
            <div class="col-sm-12">
                <div class="nav1 breadcrumb">
                        <a id="login" asp-area="Identity" asp-page="/Account/Login"><i class="fl-bigmug-line-download146"></i>Login</a>
                        &nbsp/&nbsp
                        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        &nbsp
                        &nbsp
                        <a href="https://livedemo00-opencart.template-help.com/opencart_prod-23518/index.php?route=account/wishlist" id="wishlist-total" title="Wish List (0)">
                            <i class="fa-regular fa-heart"></i>
                            Wish List (0)
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                          </button>
                </div>
            </div>
        </div> 
    </div>
}
