@using MealWheel
@model MealWheel.Models.Address
@{
    ViewData["Title"] = "gotoaddress";
}

<!DOCTYPE html>
<html>
<head>
	<title>Checkout Form</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="style.css">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>

<body>
		<div class="col-md-4 container bg-default">
			
			<h4 class="my-4">
					Billing Address
			</h4>
			
			
				<div class="form-row">
					<div class="col-md-6 form-group">
						<label for="firstname">Door number</label>
						<input type="text" asp-for="Door_no" class="form-control">
					</div>

					<div class="col-md-6 form-group">
						<label for="lastname">Area</label>
						<input type="text" asp-for="Area" class="form-control">
					</div>
				</div>

				<div class="form-group">
					<label for="adress">Address</label>
					<input type="text" asp-for="FullAddress" class="form-control">
				</div>

				<div class="form-group">
					<label for="address2">Land mark
					</label>
					<input type="text" asp-for="Landmark" class="form-control">
				</div>
				<hr>
					<hr class="mb-4">
				
					<button class="btn btn-primary bt-lg btn-block" type="submit">Continue</button>
			
		</div>
</body>
</html>


