@using MealWheel
@model IEnumerable<MealWheel.Models.feedback>
@{
    ViewData["Title"] = "Index";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>


<script>
    $(document).ready(function() {
        getFeedback()
    });
function.getFeedback(){
    $.ajax({
        type: "GET",
        url: "http://localhost:5145/api/feedback",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: ""
    });
}



</script>


<div class="row">
    <div class="col-6">
        <h2 style="color:#6f42c1"> 
             Feedbacks
        </h2>
    </div>
     <div class="col-6 text-end">
        <a asp-action="Create" class="btn" style="background-color:#6f42c1;color:white"> &nbsp; Add feedback</a>
    </div>

    <br />
    <br />
    <div class="col-lg-12 col-md-6">
      <table class=" container table table-striped">
      <tr>
        <th>
            @Html.DisplayNameFor(c => c.product.Name)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.uname)
        </th>
        <th>
            @Html.DisplayNameFor(c => c.review)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.rating)
        </th>
        
        
        <th></th>
      </tr>
      @foreach(var item in Model)
      {
      <tr>
          <td>
              @item.product.Name
          </td>
          <td>
              @item.uname
          </td>
          <td>
              @item.review
          </td>
          <td>
              @item.rating
          </td>
         
         
         
          <td>
       <div class="btn-group" role="group">
  <a asp-action="Edit" asp-controller="Feedbacks" class="btn btn-success" asp-route-id="@item.id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-controller="Feedbacks" asp-route-id="@item.id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-controller="Feedbacks" asp-route-id="@item.id"> Delete </a>
</div>
</td>
</tr>
      }
      </table>
      </div>
    </div>

