@using MealWheel
@model IEnumerable<MealWheel.Models.Food_Products>
@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/Home.css"/>
</head>
<div class="row">
    <div class="col-6">
        <h2 style="color:#6f42c1"> 
            Food List
        </h2>
    </div>
     <div class="col-6 text-end">
        <a asp-action="Create" class="btn" style="background-color:#6f42c1;color:white"> &nbsp; Add Food</a>
    </div>

    <br />
    <br />
    <div class="col-lg-12 col-md-6">
      <table class=" container table table-striped">
      <tr>
           <th>
            @Html.DisplayNameFor(c => c.category.name)
        </th>
        <th>
            @Html.DisplayNameFor(c => c.Name)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.Price)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.description)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.rating)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.address_res)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.Avail)
        </th>
         <th>
            @Html.DisplayNameFor(c => c.quantity)
        </th>
        <th></th>
      </tr>
      @foreach(var item in Model)
      {
      <tr>
           <td>
              @item.category.name
          </td>
          <td>
              @item.Name
          </td>
          <td>
              @item.Price
          </td>
          <td>
              @item.description
          </td>
          <td>
              @item.rating
          </td>
          <td>
              @item.address_res
          </td>
           <td>
              @item.Avail
          </td>
           <td>
              @item.quantity
          </td>
          <td>
       <div class="btn-group no-style" role="group">
  <a asp-action="Edit" asp-controller="Foods" class="btn btn-success" asp-route-id="@item.Id" > Edit  </a>
  <a class="btn btn-warning" asp-action="Details" asp-controller="Foods" asp-route-id="@item.Id">Details</a>
  <a class="btn btn-danger" asp-action="Delete" asp-controller="Foods" asp-route-id="@item.Id"> Delete </a>
</div>
</td>
</tr>
      }
      </table>
      </div>
    </div>


