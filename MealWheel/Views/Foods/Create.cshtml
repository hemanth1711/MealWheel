@using MealWheel
@model MealWheel.Models.Food_Products
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <h2 style="color:mediumpurple">
        Add a Food
    </h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <div class=",col-2">
                <label asp-for="category.name"></label>
            </div>
            <div class="col-5">
                <select asp-for="cid" class ="form-control" asp-items="ViewBag.savecat"></select>
               
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="category.name" class="text-danger"></span>


            <div class=",col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>

             <div class=",col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-5">
                 <input asp-for="Price" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>

            <div class=",col-2">
                <label asp-for="rating"></label>
            </div>
            <div class="col-5">
                 <input asp-for="rating" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="rating" class="text-danger"></span>

             <div class=",col-2">
                <label asp-for="description"></label>
            </div>
            <div class="col-5">
                <input asp-for="description" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="description" class="text-danger"></span>
           
            
            <div class=",col-2">
                <label asp-for="address_res"></label>
            </div>
            <div class="col-5">
                 <input asp-for="address_res" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="address_res" class="text-danger"></span>
            <div class=",col-2">
                <label asp-for="pic"> </label>
            </div>
            <div class="col-5">
                <input asp-for="pic" class="form-control" type="file" id="validationCustom05" required>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="pic" class="text-danger"></span>
            
             <div class=",col-2">
                <label asp-for="Avail"></label>
            </div>
            <div class="col-5">
                <input asp-for="Avail" type="checkbox"/>
            </div>
            <span asp-validation-for="Avail" class="text-danger"></span>
            <div class=",col-2">
                <label asp-for="quantity"></label>
            </div>
            <div class="col-5">
                 <input asp-for="quantity" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="quantity" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input class="btn btn-primary" value="save" type="submit"/>
            <a asp-action="Index" asp-controller="Foods" class="btn btn-success"> Back to List</a>
        </div>
    </div>
</form>
</div>


