@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
<ul class="breadcrumb">
        <li><a href=""><i class="fa fa-home"></i></a></li>
        <li><span>Register</span></li>
      </ul>
      <div id="content" class="col-sm-12">
        <h1>Register Account</h1>
        <p>If you already have an account with us, please login at the <a id="login" asp-area="Identity" asp-page="/Account/Login">login page</a>.</p>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" class="form-horizontal" method="post" enctype="multipart/form-data">
            <fieldset id="account">
            <legend>Your Personal Details</legend>
            <hr />
            <div class="form-group required" style="display:  none ;">
              <label class="col-sm-2 control-label">Customer Group</label>
              <div class="col-sm-10">                            <div class="radio">
                  <input type="radio" name="customer_group_id" value="1" checked="checked" id="customer_group_id1"><label for="customer_group_id1">
                    
                    Default</label>
                </div>
                              </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="Input.FirstName" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                <input asp-for="Input.FirstName"  class="form-control" placeholder="Enter First Name" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Input.LastName" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                <input asp-for="Input.LastName" class="form-control" placeholder="Enter Last Name" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Input.Address" class="col-sm-2 control-label" ></label>
                <div class="col-sm-10">
                <input asp-for="Input.Address" class="form-control" autocomplete="username" placeholder="Enter the Address" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Input.MobileNumber" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                <input asp-for="Input.MobileNumber" type="number" class="form-control" placeholder="Enter Mobile Number" autocomplete="username" aria-required="true" />
                </div>
                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="Input.Email" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Enter Email" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            </fieldset>
            <fieldset>
            <legend>Your Password</legend>
            <div class="form-group required">
                <label asp-for="Input.Password" class="col-sm-2 control-label" ></label>
                <div class="col-sm-10">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Enter The Password" aria-required="true" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <div class="col-sm-10">
                <label asp-for="Input.ConfirmPassword" class="col-sm-2 control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Re Enter The Password" aria-required="true" />
                </div>
                
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            </fieldset>
            <fieldset>
            <legend>Upload Your Profile Pic</legend>
            <div class="form-group required">
                <label asp-for="Input.profileimage"class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                <input asp-for="Input.profileimage" type="file" class="form-control" placeholder="Choose the Picture" aria-required="true" />
                </div>
                
                <span asp-validation-for="Input.profileimage" class="text-danger"></span>
            </div>
            </fieldset>
            <br/>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
        </div>
        <br/>
        <div class="container">
		<a href="#" class="demo-img"><img src="~/Images/tiranga.jpg" width="95vw" height="100px" alt=""></a>
	</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
